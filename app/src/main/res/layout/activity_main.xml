<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="adivinha.estagiariopleno.com.adivinha.MainActivity">

    <TextView
        android:text="ESCOLHA UM NÃšMERO DE 0 A 10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textCabecalhoId"
        android:textSize="@dimen/texto_resultado" />

    <Button
        android:text="Jogar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textCabecalhoId"
        android:layout_marginTop="80dp"
        android:id="@+id/botaoJogarId"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Nenhum sorteio gerado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textoResultadoId"
        android:textSize="@dimen/texto_resultado"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
